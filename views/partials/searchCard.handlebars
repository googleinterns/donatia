<div class="search-card">
  <div class="search-left">
    <div class="search-dropoff-info">
      <h1 class="search-name">{{title}}</h1>
      <h2 class="search-address">{{address}}</h2>
      <h2 class="search-phone">{{phone}}</h2>
    </div>
    <div class="search-dropoff-options">
      <p>Drop off 
        {{#if dropoff}} <span class="check">✓</span> {{else}} <span class="cross">✗</span> {{/if}}
      </p>
      <p>Mail in 
        {{#if mailin}} <span class="check">✓</span> {{else}} <span class="cross">✗</span> {{/if}}
      </p>
    </div>
  </div>
  <div class="search-right">
    <h2>Accepts</h2>
    <div class="search-categories-contianer">
      {{#each categories}}
        <p class="search-category">{{this}}</p>
      {{/each}}
    </div>
  </div>
</div>
